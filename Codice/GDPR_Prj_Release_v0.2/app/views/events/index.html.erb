<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Typology</th>
      <th>Name</th>
      <th>Description</th>
      <th>Date from</th>
      <th>Date to</th>
      <th>Class</th>
      <th>State</th>
      <th>Participants</th>
      <th>Notes</th>
      <th>Actual start</th>
      <th>Actual end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_typology.et_name %></td>
        <td><%= event.e_name %></td>
        <td><%= event.e_description %></td>
        <td><%= event.e_date_from %></td>
        <td><%= event.e_date_to %></td>
        <td><%= event.e_class %></td>
        <td><%= event.e_state %></td>
        <td><%= event.e_participants %></td>
        <td><%= event.e_notes %></td>
        <td><%= event.e_actual_start %></td>
        <td><%= event.e_actual_end %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

