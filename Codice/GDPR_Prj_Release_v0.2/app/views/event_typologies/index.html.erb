<%= render 'layouts/flash' %>

<h1>Tipologie Evento</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Nome Evento</th>
    <th>Priorit√† Evento</th>
    <th>Notifica Anticipata</th>
    <th>Ripetizione</th>
    <th>Colore</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @event_typologies.each do |event_typology| %>
    <tr>
      <td><%= event_typology.et_name %></td>
      <td><%= event_typology.et_priority %></td>
      <td><%= event_typology.et_early_notification %></td>
      <td><%= event_typology.et_event_repeat %></td>
      <td><p class="color-box" style="
                                      background-color: <%=event_typology.et_color %>;
                                      border: 2px solid rgba(0, 0, 0, 0.3);
                                      border-radius: 5px;
                                      width: 70px;
                                      height: 50px;
                                      margin: 0px;
      "></p></td>

      <td><%= link_to 'Dettagli', event_typology, :class => "btn btn-secondary" %></td>
      <td><%= link_to 'Modifica', edit_event_typology_path(event_typology), :class => "btn btn-primary" %></td>
      <td><%= link_to 'Elimina', event_typology, method: :delete, data: {confirm: 'Sei sicuro di voler eliminare una tipologia? Se la elimini tutti gli eventi ad essa collegati verranno cancellati.'}, :class => "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crea Nuova Tipologia', new_event_typology_path, :class => "btn btn-primary" %>
<%= link_to 'Indietro', '/', :class => "btn btn-light" %>
