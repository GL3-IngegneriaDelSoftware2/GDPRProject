<p id="notice"><%= notice %></p>

<h1>Tipologie Evento</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome Evento</th>
      <th>Priorit√† Evento</th>
      <th>Notifica Anticipata</th>
      <th>Ripetizione</th>
      <th>Colore</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_typologies.each do |event_typology| %>
      <tr>
        <td><%= event_typology.et_name %></td>
        <td><%= event_typology.et_priority %></td>
        <td><%= event_typology.et_early_notification %></td>
        <td><%= event_typology.et_event_repeat %></td>
        <td><%= event_typology.et_color %></td>
        <td><%= link_to 'Dettagli', event_typology, :class => "btn btn-secondary" %></td>
        <td><%= link_to 'Modifica', edit_event_typology_path(event_typology), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Elimina', event_typology, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

