<div class="container" style="margin-top: 15px">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">

    <% if event_typology.persisted? %>
      <h1>Modifica Tipologia</h1>
    <% else %>
      <h1>Nuova Tipologia</h1>
    <% end %>

    <%= form_with(model: event_typology, local: true) do |form| %>
      <% if event_typology.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(event_typology.errors.count, "error") %> prohibited this event_typology from being saved:</h2>

          <ul>
          <% event_typology.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :et_name, "Nome Tipologia" %>
        <%= form.text_field :et_name, :required => true, :class => "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :et_priority, "PrioritÃ " %>
        <%= form.number_field :et_priority, :min => 1, :max => 5, :class => "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :et_early_notification, "Notifica Anticipata"%>
        <%= form.number_field :et_early_notification, :min => 0, :max => 60, :class => "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :et_event_repeat, "Ripetizione" %>
        <%= form.select :et_event_repeat, ['Non ripetere','Giornaliero', 'Settimanale', 'Mensile', 'Annuale' ], {},:class => "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :et_color, "Colore" %>
        <%= form.color_field :et_color, :class => "form-control" %>
      </div>

      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        Salva
      <% end %>


      <%= link_to 'Indietro', event_typologies_path, :class => "btn btn-light" %>

    <% end %>

    </div>
    <div class="col-3"></div>
  </div>
</div>
